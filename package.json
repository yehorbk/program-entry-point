{
  "name": "rtl",
  "version": "1.0.0",
  "description": "A library that allows to implement the main class of the application and use it to manage the application process.",
  "main": "demo.js",
  "bin": {
    "rtl": "./lib/loader.js"
  },
  "directories": {
    "lib": "lib",
    "test": "tests"
  },
  "dependencies": {
    "typescript": "^3.7.5"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "@typescript-eslint/parser": "^2.18.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-typescript": "^6.3.1",
    "eslint-plugin-import": "^2.20.0"
  },
  "scripts": {
    "start": "npm run-script build ; npm run-script rtl-run",
    "build": "tsc ; eslint --fix ./lib/*.js",
    "test": "node ./tests/*.js",
    "eslint": "eslint --ext .js,.jsx,.ts,.tsx ./",
    "eslint:dump": "eslint --print-config ./.eslintrc.json",
    "rtl-run": "node ./lib/loader.js -f demo.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yehorbk/program-entry-point.git"
  },
  "keywords": [
    "typescript",
    "javascript",
    "ts",
    "js",
    "application",
    "startup",
    "entry",
    "entry point",
    "main",
    "interface"
  ],
