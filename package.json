  "version": "1.0.0",
  "description": "A library that provides bootstrap functionality and process management tools for JavaScript applications",
  "main": "demo.js",
  "bin": {
    "rtl": "./bin/cli.js"
  },
  "directories": {
    "lib": "lib",
    "test": "tests"
  },
  "dependencies": {
    "typescript": "^3.7.5"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.18.0",
